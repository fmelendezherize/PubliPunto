<UserControl x:Class="Decktra.PubliPuntoEstacion.MainControlsModule.Views.HomeControlsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:Decktra.PubliPuntoEstacion.MainControlsModule"
	xmlns:views="clr-namespace:Decktra.PubliPuntoEstacion.MainControlsModule.Views"
    xmlns:prism="http://www.codeplex.com/prism"
	mc:Ignorable="d"
	x:Name="UserControl">
	<Grid x:Name="LayoutRoot" Style="{DynamicResource HomeControlStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="27px"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ContentControl x:Name="NuestrosClientesRegion" prism:RegionManager.RegionName="NuestrosClientesRegion" Grid.Row="0" />
        <Grid Grid.Row="1" Background="{DynamicResource BackgroundColorBrush}"/>
        <ContentControl x:Name="OfertasRegion" prism:RegionManager.RegionName="OfertasRegion" Grid.Row="2"/>
	</Grid>
</UserControl>