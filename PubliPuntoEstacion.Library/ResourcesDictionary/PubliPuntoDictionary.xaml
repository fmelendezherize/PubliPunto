<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="BackgroundColor" Color="#DEDEE6"/>
    
    <Style x:Key="PubliPuntoWindowStyle" TargetType="{x:Type Window}">
        <Setter Property="Width" Value="1080"/>
        <Setter Property="Height" Value="1920"/>
        <Setter Property="Background" Value="white"/>
        <Setter Property="WindowState" Value="Maximized"/>
    </Style>

    <Style x:Key="PubliPuntoGridStyle" TargetType="{x:Type Grid}">
        <Setter Property="Width" Value="1080"/>
        <Setter Property="Height" Value="1920"/>
        <Setter Property="Background" Value="{StaticResource BackgroundColor}"/>
    </Style>

    <Style x:Key="HeaderRegionStyle" TargetType="ItemsControl">
        <Setter Property="Margin" Value="60,27,60,27"/>
    </Style>

    <Style x:Key="WorkAreaStyle" TargetType="ItemsControl">
        <Setter Property="Background" Value="gray"/>
        <Setter Property="Margin" Value="60,27,60,27"/>
    </Style>

    <Style x:Key="FooterAreaStyle" TargetType="ItemsControl">
        <Setter Property="Background" Value="blue"/>
        <Setter Property="Margin" Value="60,27,60,27"/>
    </Style>

    <Style x:Key="ScrollViewerMainStyle" TargetType="ScrollViewer">
        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
    </Style>

